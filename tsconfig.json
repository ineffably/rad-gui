{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "incremental": true,
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["DOM", "ES2022"],
    "types": ["node", "jest"],
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": false,
    "declaration": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "./test/**/*",
    "./docs/**/*",
    "./examples/**/*",
    "./index.html",
  ]
}


